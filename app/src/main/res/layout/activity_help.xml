<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15sp"
    android:orientation="vertical"
    tools:context="com.nsbfilesharing.ShareD.activity.HelpActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/text_help"
    android:textSize="20sp"
    android:textColor="@color/colorSecondary"
    android:textStyle="bold"

    android:fontFamily="@font/ubuntu"/>

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/text_helpSummary"
    style="@style/TextAppearance.Primary.Small"
    android:textSize="18sp"
        android:layout_marginTop="20sp"
    android:fontFamily="@font/ubuntu"/>

    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us : "
            android:textSize="18sp"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold"
            android:fontFamily="@font/ubuntu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="helpdeskshared@gmail.com"
            style="@style/TextAppearance.Primary.Small"
            android:textSize="18sp"
            android:autoLink="email"
            android:fontFamily="@font/ubuntu"
            />
    </LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>
